<label><%= @course.name %></label>\
<label><%= @topic.title %></label>\
<label><%= @track.title %></label>
<br /><br />
<div id="fb-root"></div>
<div class='problem'>
	<label><%= @problem.title %></label><br/>
	<%= @problem.description %>
	<table width='100%'>
		<tr>
			<td width='80%'>
				<% if student_signed_in? %>
					<%=button_tag 'Ask Facebook', type: 'Button', id:'facebook', onClick: "openBackWindow('/facebook', 'Facebook')" %>
					<% track_progess = TrackProgression.get_progress(current_student,
					@problem.track.topic) %> 
 					<% if track_progess >= @problem.track.difficulty %>
 						<%= render partial: "solutions/new"%>
 						<td style='vertical-align:top;'>
							<div style='margin-left:1em;'>
								<b>Memory Contents:</b>
								<div id="memory" class="fixed-horizontal"></div>
								<br /><br /><br /><br />
								<script type="text/javascript">
								$('#tip').tooltip(options)</script>
								<button id='tip'type="button" 
								class="btn btn-info" 
								data-toggle="tooltip" 
								data-placement="left" 
								title="Appears based on number of submissions">
								Hints</button><br /><br />
								<%= render partial: "hints/give" %>
								<br /><br />
								<button id='tip'type="button" 
									class="btn btn-info" 
									data-toggle="tooltip" 
									data-placement="left" 
									title="Appears based on the time counter">
									Tips</button><br /><br />
								<%= render partial: "tips/give" %>
							</div>
						</td>
					<% end %>
				<% end %>
			</td>
		</tr>
	</table>
</div>
