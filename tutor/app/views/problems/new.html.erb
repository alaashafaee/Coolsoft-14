<div class="left-row">
	<div class="container" style='width:100%;'>
		<div id = "crumbs">
			<ul >
				<li class = "sub"><a class = "visit">Problem</a></li>
				<li class = "sub1"><a class = "preventclick" style = "padding:5px 15% 0 0px;">
					Test Cases</a>
				</li>
				<li class = "sub2"><a class = "preventclick" style = "padding: 5px 3.75% 0 0px;">
					Model Answers</a>
				</li>
				<li class = "sub3"><a class = "preventclick">Tips</a></li>
				<li class = "sub4"><a class = "preventclick">Hints</a></li>
			</ul>
		</div>
		<br><br>
		<h1 align ="center">Add a problem</h1>
		<% if @problem.errors.any? %>
				<div id="error_explanation">
					<h2><%= pluralize(@problem.errors.count, "error") %> prohibited this course from being saved:</h2>
					<ul>
						<% @problem.errors.full_messages.each do |msg| %>
							<li><%= msg %></li>
						<% end %>
					</ul>
				</div>
			<% end %> 
		<%= form_for :problem, url: problems_path do |problem| %>
			<p>
				<%= problem.label :Title %><br> 
				<%= problem.text_field :title, class: "form-control", style: "width:60%", :value => @problem.title %>
			</p>
			<p>
				<%= problem.label :description %><br>
				<%= problem.text_area :description, :cols => "50", :rows => "10", class: "form-control",
					style: "width:60%", :value => @problem.description %>
			</p>
			<p>
				<%= problem.label :snippet %><br>
				<%= problem.text_area :snippet, cols: 50, rows: 10,
					class: "form-control", style: "width: 60%",
					value: "public class CoolSoft {\n\t
					public static void main(String [] args) {\n\t\t\n\t}\n}" %>
			</p>
			<%= problem.hidden_field :track_id, value: params[:id] %>
			<p>
				<%= problem.submit "Save Problem", class: "btn btn-info" %>
			</p>
		<% end %>
	</div>
</div>