
<body>
<script type="text/javascript">
function toggle_visibility(id) {
var e = document.getElementById(id);
if(e.style.display == 'block')
e.style.display = 'none';
else
e.style.display = 'block';
}
</script>
</body>

<br><ul class="navbar-brand pull-right"><%= link_to "Create test case"  , {:controller => 'test_cases',:action => 'new',
    :method => :get, :problem_id => @problem.id },{class: 'btn btn-primary btn' }  %> </ul></br>
<a href="#" return:false; class="Lst"  onclick="toggle_visibility('foo1'); return false;"  style="font:120px"> Test cases</a>
  
<div id="foo1" style="display:none;">
	<% if !@test_cases.any? %>
		<p>You have no previous test cases</p>
	<% end %>
	<% if !@test_cases.empty? %>
		<table class="table table-striped", style = "width:60%">
		 <thead>
			<tr>
				<th style ="width:20%" >Input</th>
				<th style ="width:20%" >Output</th>
				<th style ="width:20%" >Edit</th>
			</tr>
		</thead>
		<tbody>
			<tr>
				<% @test_cases.each do |test_case| %>
				<td><%= test_case.input   %></td>
				<td><%= test_case.output   %></td>
            	<td><%= link_to " Edit", {:controller => 'test_cases', :action => 'edit',:method => :get,
            	 	:id => test_case.id}, {class: 'btn btn-primary btn-xs' }%></td>
			</tr>
		</tbody>
			<% end %>		
	</table>
	<% end %>
</div>

<style type="text/css" />
	a.Lst {
    	font-size: 30px;
    	line-height: 0px;
    	padding-left: 0px;
    	font-weight: normal;
	}
</style>