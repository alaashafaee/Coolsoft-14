<%= form_tag utilities_advanced_search_path, method: 'get', remote: true,
		class: "form-horizontal" do %>
	<fieldset>
		<div class="form-group">
			<label class="col-lg-2 control-label">Keyword</label>
			<div class="col-lg-10">
				<%= text_field_tag :keyword, "", class: "form-control" %>
			</div>
		</div>
		<div class="form-group">
			<label class="col-lg-2 control-label">Target</label>
			<div class="col-lg-10">
				<div class="checkbox">
					<div>
						<label>
							<%= check_box_tag :lecturers %>Lecturers
						</label>
					</div>
					<div>
						<label>
							<%= check_box_tag :teaching_assistants %>Teaching Assistant
						</label>
					</div>
					<div>
						<label>
							<%= check_box_tag :students %>Students
						</label>
					</div>
					<div>
						<label>
							<%= check_box_tag :courses %>Courses
						</label>
					</div>
					<div>
						<label>
							<%= check_box_tag :topics %>Topics
						</label>
					</div>
					<div>
						<label>
							<%= check_box_tag :posts %>Posts
						</label>
					</div>
				</div>
			</div>
		</div>
		<div class="form-group">
			<label for="select" class="col-lg-2 control-label">Options</label>
			<div class="col-lg-10">
				<%= select_tag :options , "<option>excatly match</option>
						<option>includes</option><option>starts with</option>
						<option>ends with</option>".html_safe,class: "form-control" %>
			</div>
		</div>
		<div class="form-group">
			<div class="col-lg-10 col-lg-offset-2">
				<button type="submit" class="btn btn-primary">Submit</button>
			</div>
		</div>
	</fieldset>
<% end %>