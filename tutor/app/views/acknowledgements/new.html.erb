<h1>Acknowledge A student</h1>

<br/>
<% if flash[:notice] -%>
   <div class="alert alert-warning", style="display: inline-block;"><%= flash[:notice] %></div>
<% end %>
<br/>

<%= form_for :acknowledgement, url: {action: "create"} do  |f| %>

	<p>
		<%= select("student", "id", @course.students.find(:all).collect {|p| [p.name ,p.id ]}, {:prompt => 'Select', :multiple => true}) %>
	</p>

	<p>
		<%= f.label :Message %><br>
		<%= f.text_area :description, class:"form-control", style:"width:300px",:value => 'Good Job!' %>
	</p>

	<p>
			<%= f.submit "Send Acknowledgement", class: "btn btn-success"%>
	</p>	
<% end %>