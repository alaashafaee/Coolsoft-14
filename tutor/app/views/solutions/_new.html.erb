<!-- The flash messages for the succes and failure scenarios -->
<p style="color: green"><%= flash[:success] %></p>
<p style="color: red"><%= flash[:alert] %></p>

<!-- Timer that starts when problem is shown --> 
<b>Time spent:</b> 
<span id="mins">0</span>:<span id="secs">00</span>
<%= @solution_id.to_s %>
<%= form_for :solution,
	:url => { :controller => "solutions", :action => "create" },
	:html => {:method => :post} do |f| %>
	<%= @code = f.text_area :code, value: "public class CoolSoft {\n\tpublic static void main(String [] args) {\n\t\t\n\t}\n}",
			class: "editor" %> 
	<%= f.hidden_field :problem_id, value: params[:id] %>
	<br>
	<table width='100%'>
		<tr>
			<td>
				<%= button_tag 'Test', id: 'test' %>
				<%= button_tag 'Debug', id: 'debug' %>
				<%= button_tag 'Previous Step', id: 'previous', disabled: true %>
				<%= button_tag 'Next Step', id: 'next', disabled: true %>
			</td>
			<td style='text-align:right;'>					
				<b class='accepted'>Accepted</b>
				<b class='wrong_answer'>Wrong Answer</b>
				<b class='runtime_error'>Runtime Error</b>
				<b class='compilation_error'>Compilation Error</b>
				<%= f.submit "Submit"%>
				<%= f.submit "Compile"%>
			</td>
		</tr>
	</table>
	<br /><br />
	<textarea class='test'>Test Input</textarea><br /><br />

	<!--Author: Ahmed Moataz-->
	<b>Console:</b><br/>
	<div style="color: orange; font-family: monospace; border: #000000; border-style: solid; border-width: thin; max-height: 150px; min-height: 150px; overflow: auto; background: #3d1451;">
		<p style="color: green; margin: 5px;"><%= flash[:compiler_success] %></p>
		<p style="color: red; margin: 5px;"><%= flash[:compiler_fail] %></p>
		<p style="white-space: pre; margin: 5px;"><%= flash[:compiler_feedback] %></p>
	</div>

<% end %>