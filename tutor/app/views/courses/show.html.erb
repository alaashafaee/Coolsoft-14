<div class ="tabs">
	<ul class="tab-links">
		<li ><a href="/courses/">My Courses</a></li>
		<% if lecturer_signed_in? %>
			<li><a href="/courses/new">Create new Course</a></li>
		<% elsif student_signed_in? %>
			<li><a href="/courses/sign_up">Sign up for a course</a></li>
		<% end %>
	</ul>
	<div class = "tab-content" style = "min-height: 400px">
		<div id="tab1" class="tab active">
			<div class = "panel-body" style = "font-family: Lucida Sans Unicode">
				<h1><%= @course.name %></h1>
			</div>
			<div style = "float:top">
				<p>
					<b>Code:</b>
					</br>
					<%= @course.code %>
				</p>
				</br>
				<p>
					<b>Year:</b>
					</br>
					<%= @course.year %>
				</p>
				</br>
				<p>
					<b>Semester:</b>
					</br>
					<%= @course.semester %>
				</p>
				</br>
				<p>
					<b>Description:</b>
					</br>
					<%= @course.description %>
				</p>
			</div>

			<div  style="margin-left:70%; margin-top: -300px";>
				<div>
					<%= link_to "View Discussion Board", { :controller => 'discussion_boards',
						:action => 'show', :id => @course.id	}, class: "btn btn-default", method: :get, style: "text-decoration:none; margin-top: -70px" %>
				</div>
				<% openable = true %>
				<div class="panel-group list-group" id="accordion" style="width:100%;">
					<% @topics.each do |t| %>	
						<% if openable %>
							<% open = "in" %>
							<% openarrow = "glyphicon-chevron-down" %>
							<% openable = false %>
						<% else %>
							<% open = "" %>
							<% openarrow = "glyphicon-chevron-right" %>
						<% end %>
						<div class="panel panel-default">
							<div class="panel-title list-group-item list-group-item-info">
								<a class="icon glyphicon <%= openarrow %>"
									href="#<%= t.id.to_s %>"
									data-toggle="collapse" data-parent="#accordion"
									style="margin-right:1%;text-decoration: none;">
								</a>
								<%= link_to t.title, t, style: 'color:#003366;' %></b>
								<span class="badge"><%= t.tracks.count %></span>
							</div>
							<div id="<%= t.id.to_s %>" class="panel-collapse collapse <%= open %>">
								<ul class="list-group">
									<% t.tracks.each do |tt|%>
										<% color = "label label-default" %>
										<li style="border-style:hidden;" class="list-group-item" data-toggle="tooltip"
											data-placement="top" title="<%= tt.difficulty %>">
											<%= link_to tt.title, tt, class: color %>
										</li>
									<% end %>
								</ul>
							</div>
						</div>	
					<% end %>
				</div>
			</div>
		</div>
	</div>
</div>
