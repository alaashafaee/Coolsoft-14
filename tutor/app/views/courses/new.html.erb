<h1>Create New Course</h1>
<% if @t.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@t.errors.count, "error") %> prohibited this course from being saved:</h2>
 
    <ul>
    <% @t.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_for :course, url: courses_path   do |f| %>
  <p>
    <%= f.label :Name %><br>
    <%= f.text_field :name ,:value => @t.name%>
  </p>

 
  <p>
    <%= f.label :Code %><br>
    <%= f.text_field :code , :value => @t.code %>
  </p>

  <p>
    <%= f.label :Description %><br>
    <%= f.text_area :description , class:"form-control",style:"width:300px",placeholder:"Description", :value => @t.description %>
  </p>
   <p>
    <%= f.label :Semester %><br>
    <%= f.text_field :semester, :value => @t.semester  %>
  </p>
  <p>
    <%= f.label :Year %><br>
    <%= f.text_field :year , :value => @t.year %>
  </p>

  





  <p>
    <%= f.submit %>
  </p>
<% end %>