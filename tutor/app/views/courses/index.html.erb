	<% if !@courses.any? %>
		<h1>You have no courses</h1>
	<%end%>
	<%= button_to "Create course"  , {:action => 'new', :controller => 'courses',:method => :get} , {
		class: 'btn btn-primary' }   %>
		<br>
		<br>		
		<br>
	<%= flash[:success_creation] %>
<% if @courses.any? %>
		<h1>Your Courses</h1>
 
	<table class = "table table-striped">
 		 <tr>
  			<th>Name</th>
  			<th>Code</th>
			<th>Year</th>
			<th>Semester</th>
			<th>Description</th>
			<th>Created at</th>
			<th>Updated at</th>
			<th>Options</th>
		</tr>
		<% @courses.each do |c| %>
			<tr>
				<td><%= link_to c.name , :controller => 'courses', :action => 'show', :id => c.id, 
				    			 :method => :get , class: "btn btn-success" %></td>
				<td><%= c.code %></td>
				<td><%= c.year %></td>
				<td><%= c.semester %></td>
				<td><%= c.description %></td>
				<td><%= c.created_at %></td>
				<td><%= c.updated_at %></td>
				<% if current_lecturer %>
				<td><%= link_to "Manage Course", {:controller => 'courses', :action => 'edit', :id => c.id},
								 class: "btn btn-success"%><%end%></td>
			</tr>
		<% end %>
	</table>
<%end%>
