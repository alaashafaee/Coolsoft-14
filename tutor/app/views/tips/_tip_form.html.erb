<div id="div1">
	<% if flash[:notice] %>
		<div class= "alert alert-success"><%= flash[:notice] %></div>
	<% end %>
</div>
<%= form_for :tip_edit, url: tip_path(@tip), method: :patch, remote: true do |tip_edit| %>
	<p>
		<h3><%= tip_edit.label :Content %></h3>
		<h4 align ="left"><%= @tip.message %></h4>
		<%= tip_edit.text_area :message, class:"form-control", :cols => "40", :rows => "5", :value => @tip.message %>
	</p>
	<p>
		<h3><%= tip_edit.label :Time_in_seconds %></h3>
		<h4 align ="left"><%= @tip.time %></h4>
		<%= tip_edit.text_field :time, class:"form-control", style:"width:55px; height:35px;", :value => @tip.time %>
	</p>
		<%= tip_edit.submit "Save changes", class: "btn btn-large btn-info", style: "float:left" %>
		<%= link_to "Cancel", {:controller => 'model_answers', action: 'edit',
			:id => @tip.model_answer_id}, class: "btn btn-success",
			style: "text-decoration:none; float:right" %>
<% end %>