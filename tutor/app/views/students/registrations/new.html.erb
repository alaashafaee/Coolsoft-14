<style type="text/css">
	.student_registration {
		width: 100%;
		min-width: 100%;
		min-height: 100%;
		height: 1000px;
		/*background-color:#187078;*/
		border-color: red;
		border-radius: 20px;
}
</style>

<div class="container well" align="center" style="margin-top:30px">
	<div class="left-row" style="width:50%;">
	<div class="student_registration">
		<h2>Sign up</h2>
		<%= form_for(resource, as: resource_name, url: registration_path(resource_name), 
			:html => { :multipart => true, :class => 'form-devise' }) do |f| %>
			<%= devise_error_messages! %>

			<%= image_tag(@student.profile_image_url.to_s) if @student.profile_image? %>
			
			<div>
				<%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Email" %>
			</div>

			<div>
				<%= f.text_field :name, class: "form-control", placeholder: "Name" %>
			</div>

			<div>
				<%= f.password_field :password, autocomplete: "off", class:"form-control", 
					placeholder:"Password" %>
			</div>

			<div>
				<%= f.password_field :password_confirmation, autocomplete: "off", class:"form-control", 
					placeholder: "Confirm Password" %>
			</div>

			<div>
				<%= f.label :gender %>
				<%= f.select(:gender, [['Male', true], ['Female', false]]) %>
			</div>

			<div>
				<%= f.label :date_of_birth %><br />
				<%= f.date_select :dob, {:start_year => Date.today.year-10, :end_year => Date.today.year-90} %>
			</div>

			<div>
				<%= f.text_field :university, class: "form-control", placeholder: "University" %>
			</div>

			<div>
				<%= f.text_field :faculty, class: "form-control", placeholder: "Faculty" %>
			</div>

			<div>
				<%= f.text_field :major, class: "form-control", placeholder: "Major" %>
			</div>

			<div>
				<%= f.label :semester %>
				<%= f.select :semester, (1..10).to_a %>
			</div>

			<div>
				<%= f.label :advising %>
				<%= f.select(:advising, [['No', false], ['Yes', true]]) %>
				<%= f.label :probation %>
				<%= f.select(:probation, [['No', false], ['Yes', true]]) %>
			</div>

			<div>
				<%= f.label :profile_image %><br />
				<%= f.file_field :profile_image, {:accept => 'image/png,image/gif,image/jpeg'} %>
				<%= f.hidden_field :profile_image_cache %>
			</div>

			<div><%= f.submit "Sign up", class: "btn btn-info button-devise" %></div>
		<% end %>

		<%= render "students/shared/links" %>	

	</div>
	</div>
</div>