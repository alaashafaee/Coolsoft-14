<div class="container well" align="center" style="margin-top:30px">
	<div class="left-row" style="width:50%;">
<div align="center">
	<h2>Sign up</h2>
	<%= form_for(resource, as: resource_name, url: registration_path(resource_name), 
		:html => { :multipart => true, :class => 'form-devise' }) do |f| %>
		<%= devise_error_messages! %>
		
		<%= image_tag(@teaching_assistant.profile_image_url.to_s) if @teaching_assistant.profile_image? %>

		<div>
			<%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Email" %>
		</div>

		<div>
			<%= f.text_field :name, class: "form-control", placeholder: "Name" %>
		</div>

		<div>
			<%= f.password_field :password, autocomplete: "off", class:"form-control", 
				placeholder:"Password" %>
		</div>

		<div>
			<%= f.password_field :password_confirmation, autocomplete: "off", class:"form-control", 
				placeholder: "Confirm Password" %>
		</div>

		<div>
			<%= f.text_field :graduated_from, class: "form-control", placeholder: "Graduated From" %>
		</div>

		<div>
			<%= f.label :degree %>
			<%= f.select(:degree, [['BSc', "BSc"], ['MSc', "MSc"]]) %>
		</div>

		<div>
			<%= f.label :graduated_year %>
			<%= f.select :graduated_year, ((Date.today.year-90)..(Date.today.year)).to_a.reverse %>
		</div>

		<div>
			<%= f.text_field :university, class: "form-control", placeholder: "University" %>
		</div>

		<div>
			<%= f.text_field :department, class: "form-control", placeholder: "Department" %>
		</div>
		
		<div><%= f.submit "Sign up", class: "btn btn-info button-devise" %></div>
	<% end %>

	<%= render "teaching_assistants/shared/links" %>
</div>
</div>
</div>