<div align="center">
	<% if flash[:notice] %>
	 <div class="alert alert-warning", style="width:180px;display:inline"><%= flash[:notice] %></div>
	 <% end %>
	<% if @discussionBoard.activated == true %>
		<div style="width: 50%; margin-left:25%">
			<h3><%=@discussionBoard.title%></h3>
			<% unless @posts.blank? %>
				<% @posts.each do |post| %>
					<div style="background-color: #A8A8A8">
										<td><%= link_to post.title, :controller => 'posts', :action => 'show', :id => post.id, 
							:method => :get, class: "btn btn-success" %></td>
						<%= post.views_count %>
					</div>
					<br>
				<% end %>
			<% else %>
				No Posts Yet .. Try Creating a Post
			<% end %>
		</div>
		<div>
			<%= button_to "Add Post", {:controller => 'posts', :action => 'new',
			:discussion_board_id => @discussionBoard.id}, class: "btn btn-success" , style: "float: left;margin-left: 15px",method: :post %> 
	</div> 	
	<% else %>
		The discusstion board is deactivated
	<% end %>
</div>